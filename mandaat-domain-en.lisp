  :has-one `((administrative-unit :via ,(s-prefix "org:linkedTo")
                              :as "linked-to"))
  :resource-base (s-url "http://data.lblod.info/id/fracties/")
  :features '(include-uri)
  :on-path "parliamentary-groups")

